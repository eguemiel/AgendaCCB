@model AgendaCCB.Data.Models.Collaborator

@{
    ViewData["Title"] = "Detalhes Colaborador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalhes Colaborador</h2>

<ol class="breadcrumb">
    <li class="breadcrumb-item">@Html.ActionLink("Index", "Index", "Collaborator")</li>
    <li class="breadcrumb-item active">Detalhes Colaborador</li>
</ol>

<div class="panel panel-default panel-table">
    <div class="panel-heading">
        <div class="row">
            <div class="col col-xs-6">
                <h3 class="panel-title">Dados Colaborador</h3>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th class="col-md-3">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>

                    <td>
                        @foreach (var item in Model.PhoneNumber)
                        {
                            @Html.DisplayFor(model => item.Number)
                            <br />
                        }
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdCommonCongregationNavigation)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.IdCommonCongregationNavigation.Name)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PositionMinistryCollaborator)
                    </th>
                    <td>
                        @foreach (var item in Model.PositionMinistryCollaborator)
                        {
                            @Html.DisplayFor(model => item.IdPositionMinistryNavigation.Description)
                            <br />
                        }
                    </td>
                </tr>
        </table>
    </div>
</div>

<div class="form-actions">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-submit">Editar</a>
    <a href="@Url.Action("Index")" class="btn btn-default">Voltar para a Lista</a>
</div>
