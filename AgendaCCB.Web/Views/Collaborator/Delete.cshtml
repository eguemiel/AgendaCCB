@model AgendaCCB.Data.Models.Collaborator

@{
    ViewData["Title"] = "Excluir Colaborador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalhes Colaborador</h2>


<ol class="breadcrumb">
    <li class="breadcrumb-item">@Html.ActionLink("Index", "Index", "Collaborator")</li>
    <li class="breadcrumb-item active">Detalhes Colaborador</li>
</ol>

<div class="panel panel-default panel-table">
    <div class="panel-heading">
        <div class="row">
            <div class="col col-xs-6">
                <h3 class="panel-title">Dados Colaborador</h3>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th class="col-md-3">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.PhoneNumber.FirstOrDefault().Number)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdCommonCongregationNavigation)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.IdCommonCongregationNavigation.Name)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdPositionMinistyNavigation)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.IdPositionMinistyNavigation.Description)
                    </td>
                </tr>
        </table>
    </div>
</div>
<h3>Tem certeza que deseja excluir?</h3>
@using (Html.BeginForm())
{
    <div class="form-actions">
        <input type="submit" value="Excluir" class="btn btn-danger btn-submit" />
        <a href="@Url.Action("Index")" class="btn btn-default">Voltar para a Lista</a>
    </div>
}
